<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/md_grey_100"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<android.support.design.widget.AppBarLayout
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		android:id="@+id/app_bar_layout"
		android:fitsSystemWindows="true"
		android:layout_width="fill_parent"
		android:layout_height="256.0dip">

		<android.support.design.widget.CollapsingToolbarLayout
			android:id="@+id/collapsing_toolbar"
			android:fitsSystemWindows="true"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			app:contentScrim="?colorPrimary"
			app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
			app:layout_scrollFlags="enterAlwaysCollapsed|scroll"
			app:titleEnabled="false">

			<ImageView
				android:id="@+id/image"
				android:fitsSystemWindows="true"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:src="@drawable/ic_account"
				android:scaleType="centerCrop"
				app:layout_collapseMode="parallax"/>

			<View
				android:background="@color/md_grey_900"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"/>

			<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<android.support.v7.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="fill_parent"
					android:layout_height="?actionBarSize"
					app:contentInsetStartWithNavigation="0.0dip"
					app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

			</FrameLayout>

			<LinearLayout
				android:gravity="center"
				android:layout_gravity="center"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_width="80.0dip"
					android:layout_height="80.0dip"
					app:srcCompat="@mipmap/ic_launcher"/>

				<View
					android:layout_width="@dimen/spacing_middle"
					android:layout_height="0.0dip"/>

				<TextView
					android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
					android:textColor="@android:color/white"
					android:id="@+id/textView9"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Source Codes"/>

			</LinearLayout>

		</android.support.design.widget.CollapsingToolbarLayout>

	</android.support.design.widget.AppBarLayout>

	<android.support.v4.widget.NestedScrollView
		android:id="@+id/nested_content"
		android:scrollbars="none"
		android:clipToPadding="false"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="-35.0dip"
		android:scrollingCache="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<android.support.v7.widget.CardView
				android:background="@android:color/white"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/spacing_large"
				android:layout_marginRight="@dimen/spacing_large"
				app:cardCornerRadius="2.0dip"
				app:cardElevation="2.0dip">

				<LinearLayout
					android:orientation="vertical"
					android:paddingLeft="@dimen/spacing_large"
					android:paddingRight="@dimen/spacing_large"
					android:paddingBottom="@dimen/spacing_large"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<TextView
						android:textAppearance="@style/TextAppearance.AppCompat.Title"
						android:textColor="@color/md_grey_800"
						android:gravity="center_vertical"
						android:layout_width="fill_parent"
						android:layout_height="?actionBarSize"
						android:text="Facilities"/>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:minHeight="@dimen/spacing_xmlarge">

						<ImageButton
							android:background="@android:color/transparent"
							android:layout_width="wrap_content"
							android:layout_height="@dimen/spacing_xmlarge"
							android:tint="@color/md_grey_400"
							app:srcCompat="@drawable/ic_baseline_perm_identity_24"/>

						<View
							android:layout_width="@dimen/spacing_middle"
							android:layout_height="0.0dip"/>

						<TextView
							android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
							android:textColor="@color/md_grey_400"
							android:gravity="center_vertical"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:minHeight="@dimen/spacing_xmlarge"
							android:text="Food &amp; Cafe"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:minHeight="@dimen/spacing_xmlarge">

						<ImageButton
							android:background="@android:color/transparent"
							android:layout_width="wrap_content"
							android:layout_height="@dimen/spacing_xmlarge"
							android:tint="@color/md_grey_400"
							app:srcCompat="@drawable/ic_baseline_perm_identity_24"/>

						<View
							android:layout_width="@dimen/spacing_middle"
							android:layout_height="0.0dip"/>

						<TextView
							android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
							android:textColor="@color/md_grey_400"
							android:gravity="center_vertical"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:minHeight="@dimen/spacing_xmlarge"
							android:text="Fresh Air"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:minHeight="@dimen/spacing_xmlarge">

						<ImageButton
							android:background="@android:color/transparent"
							android:layout_width="wrap_content"
							android:layout_height="@dimen/spacing_xmlarge"
							android:tint="@color/md_grey_400"
							app:srcCompat="@drawable/ic_baseline_perm_identity_24"/>

						<View
							android:layout_width="@dimen/spacing_middle"
							android:layout_height="0.0dip"/>

						<TextView
							android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
							android:textColor="@color/md_grey_400"
							android:gravity="center_vertical"
							android:id="@+id/textView10"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:minHeight="@dimen/spacing_xmlarge"
							android:text="Parking Area"/>

					</LinearLayout>

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:minHeight="@dimen/spacing_xmlarge">

						<ImageButton
							android:background="@android:color/transparent"
							android:layout_width="wrap_content"
							android:layout_height="@dimen/spacing_xmlarge"
							android:tint="@color/md_grey_400"
							app:srcCompat="@drawable/ic_baseline_perm_identity_24"/>

						<View
							android:layout_width="@dimen/spacing_middle"
							android:layout_height="0.0dip"/>

						<TextView
							android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
							android:textColor="@color/md_grey_400"
							android:gravity="center_vertical"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:minHeight="@dimen/spacing_xmlarge"
							android:text="Cozy Canopy"/>

					</LinearLayout>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<View
				android:layout_width="fill_parent"
				android:layout_height="@dimen/spacing_large"/>

			<android.support.v7.widget.CardView
				android:background="@android:color/white"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/spacing_large"
				android:layout_marginRight="@dimen/spacing_large"
				app:cardCornerRadius="2.0dip"
				app:cardElevation="2.0dip">

				<LinearLayout
					android:orientation="vertical"
					android:paddingLeft="@dimen/spacing_large"
					android:paddingRight="@dimen/spacing_large"
					android:paddingBottom="@dimen/spacing_large"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<TextView
						android:textAppearance="@style/TextAppearance.AppCompat.Title"
						android:textColor="@color/md_grey_800"
						android:gravity="center_vertical"
						android:layout_width="fill_parent"
						android:layout_height="?actionBarSize"
						android:text="Address"/>

					<TextView
						android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
						android:textColor="@color/md_grey_400"
						android:gravity="center_vertical"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="14321 Saddle Wood Dr, North Little Rock \nAR, 72117"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<View
				android:layout_width="fill_parent"
				android:layout_height="@dimen/spacing_large"/>

			<android.support.v7.widget.CardView
				android:background="@android:color/white"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/spacing_large"
				android:layout_marginRight="@dimen/spacing_large"
				app:cardCornerRadius="2.0dip"
				app:cardElevation="2.0dip">

				<LinearLayout
					android:orientation="vertical"
					android:paddingLeft="@dimen/spacing_large"
					android:paddingRight="@dimen/spacing_large"
					android:paddingBottom="@dimen/spacing_large"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">

					<TextView
						android:textAppearance="@style/TextAppearance.AppCompat.Title"
						android:textColor="@color/md_grey_800"
						android:gravity="center_vertical"
						android:layout_width="fill_parent"
						android:layout_height="?actionBarSize"
						android:text="Description"/>

					<TextView
						android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
						android:textColor="@color/md_grey_400"
						android:gravity="center_vertical"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam efficitur ipsum in placerat molestie.  Fusce quis mauris a enim sollicitudin"/>

				</LinearLayout>

			</android.support.v7.widget.CardView>

			<View
				android:layout_width="fill_parent"
				android:layout_height="@dimen/spacing_large"/>

		</LinearLayout>

        </android.support.v4.widget.NestedScrollView>

	<!--<android.support.design.widget.FloatingActionButton
		android:layout_gravity="end|bottom|center"
		android:id="@id/fabSourceCode"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="20.0dip"
		app:srcCompat="@drawable/ic_coding"/>-->

    </android.support.design.widget.CoordinatorLayout>

